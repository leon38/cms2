{% extends "::admin/base_admin.html.twig" %}

{% block body %}
    <div class="section-header">
        <h2 class="text-primary pull-left">Champs</h2>
        <a href="#myModal" role="button" class="pull-right btn ink-reaction btn-floating-action btn-primary" data-toggle="modal"><i class="fa fa-plus"></i></a>
        <div class="clearfix"></div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form action="{{ path('admin_field_new') }}" method="get">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                            <h3 id="myModalLabel">{%trans%}CHOOSE_FIELD_TYPE{%endtrans%}</h3>
                        </div>
                        <div class="modal-body">
                            {{ fieldstype|raw }}
                        </div>
                        <div class="modal-footer">
                            <button class="btn" data-dismiss="modal" aria-hidden="true">{%trans%}Close{%endtrans%}</button>
                            <input class="btn btn-primary" type="submit" value="{%trans%}New{%endtrans%}" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="section-body">
        <p class="lead"></p>
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-callout alert-danger" role="alert">
                {{ flashMessage|trans }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-callout alert-success" role="alert">
                {{ flashMessage|trans }}
            </div>
        {% endfor %}

        <table id="data_table" class="table table-striped table-hover" role="grid" aria-describedby="data_table" data-swftools="{{ asset('bundles/core/swf/copy_csv_xls_pdf.swf') }}">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Field</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th class="no-sort">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.type }}</td>
                    <td>{{ entity.field.typefield }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.published|booleanicon|raw }}</td>
                    <td>{% if entity.created %}{{ entity.created|date('d/m/Y H:i:s') }}{% endif %}</td>
                    <td>
                        <a href="{{ path('admin_field_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i></a>
                        <a data-toggle="modal" href='#modal-delete' class="btn btn-icon-toggle" data-toggle="tooltip" data-placement="top" data-original-title="Supprimer" data-id="{{ entity.id }}"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="modal-delete" aria-labelledby="simpleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">{{ 'tc.field.modal.title_delete'|trans }}</h4>
                </div>
                <div class="modal-body">
                    {{ 'tc.field.modal.text_delete'|trans }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn ink-reaction btn-raised btn-default-bright" data-dismiss="modal"><i class="fa fa-close"></i> {{ 'cancel'|trans }}</button>
                    <a href="" class="btn ink-reaction btn-raised btn-danger"><i class="fa fa-trash-o"></i> {{ 'delete'|trans }}</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
