{% extends "::admin/base_admin.html.twig" %}

{% block body %}
    <div class="section-header">
        <h2 class="text-primary pull-left">Contenus</h2>
        <a href="{{ path('admin_content_new') }}" class="pull-right btn ink-reaction btn-floating-action btn-primary"><i class="fa fa-plus"></i></a>
        <div class="clearfix"></div>
    </div>

    <div class="section-body">
        <p class="lead"></p>
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-callout alert-danger" role="alert">
                {{ flashMessage|trans }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-callout alert-success" role="alert">
                {{ flashMessage|trans }}
            </div>
        {% endfor %}
         <table id="data_table" class="table table-striped table-hover" role="grid" aria-describedby="data_table" data-swftools="{{ asset('bundles/core/swf/copy_csv_xls_pdf.swf') }}">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>{{ 'cms.content.title'|trans }}</th>
                    <th>{{ 'cms.content.categories'|trans }}</th>
                    <th>{% for language in languages %}<img src="{{ asset('bundles/core/images/flags/' ~ language.codelang ~ '.png') }}" />&nbsp;{% endfor %}</th>
                    <th>{{ 'cms.content.author'|trans }}</th>
                    <th>{{ 'cms.content.date'|trans }}</th>
                    <th class="no-sort text-right">{{ 'cms.content.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.title }}</td>
                    <td>
                        {{ entity.categories|join(', ') }}
                    </td>
                    <td>
                        {% for language in languages %}
                            {% if language.codelocal != entity.language.codelocal %}
                                <a href="{{ path('admin_translation_new', {'content': entity.id, 'language': language.id }) }}">
                                    <i class="fa fa-plus"></i>
                                </a>&nbsp;
                            {% else %}
                                <i class="fa fa-check"></i>&nbsp;
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ entity.author }}</td>
                    <td>{% if entity.modified %}{{ entity.modified|date(date_format) }}{% endif %}<br />{{ entity.published|trans }}</td>
                    <td class="text-right">
                        <a href="{{ path('admin_content_edit', { 'id': entity.id }) }}" class="btn btn-icon-toggle" data-toggle="tooltip" data-placement="top" data-original-title="Editer">
                            <i class="fa fa-pencil"></i>
                        </a>
                        <a data-toggle="modal" role="button" href='#modal-delete' class="btn btn-icon-toggle" rel="tooltip" data-placement="top" data-original-title="Supprimer" data-id="{{ entity.id }}">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="modal-delete" aria-labelledby="simpleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">{{ 'cms.content.modal.title_delete'|trans }}</h4>
                </div>
                <div class="modal-body">
                    {{ 'cms.content.modal.text_delete'|trans }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn ink-reaction btn-raised btn-default-bright" data-dismiss="modal"><i class="fa fa-close"></i> {{ 'cancel'|trans }}</button>
                    <a href="" class="btn ink-reaction btn-raised btn-danger"><i class="fa fa-trash-o"></i> {{ 'delete'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
