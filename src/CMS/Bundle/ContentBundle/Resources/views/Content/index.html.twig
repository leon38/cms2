{% extends "::admin/base_admin.html.twig" %}

{% block body %}
{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-callout alert-danger" role="alert">
        {{ flashMessage|trans }}
    </div>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-callout alert-success" role="alert">
        {{ flashMessage|trans }}
    </div>
{% endfor %}
<div id="main-card" class="card">
    <div class="header">
        <h4 class="title pull-left">{{ 'cms.content.content' |trans }}</h4>
        <div class="fixed-table-toolbar">
            <div class="columns columns-right pull-right">
                <a href="{{ path('admin_content_new') }}" class="btn btn-default"><i class="fa fa-plus"></i></a>
            </div>
        </div>
    </div>
    <div class="content">
         <table id="data_table" class="table table-striped table-hover" role="grid" aria-describedby="data_table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>{{ 'cms.content.title'|trans }}</th>
                    <th>{{ 'cms.content.categories'|trans }}</th>
                    <th>{% for language in languages %}<img src="{{ asset('bundles/core/images/flags/' ~ language.codelang ~ '.png') }}" />&nbsp;{% endfor %}</th>
                    <th>{{ 'cms.content.author'|trans }}</th>
                    <th>{{ 'cms.content.status'|trans }}</th>
                    <th>{{ 'cms.content.date'|trans }}</th>
                    <th class="no-sort text-right">{{ 'cms.content.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.title }}</td>
                    <td>
                        {{ entity.categories|join(', ') }}
                    </td>
                    <td>
                        {% for language in languages %}
                            {% if language.codelocal != entity.language.codelocal %}
                                <a href="{{ path('admin_translation_new', {'content': entity.id, 'language': language.id }) }}">
                                    <i class="fa fa-plus"></i>
                                </a>&nbsp;
                            {% else %}
                                <i class="fa fa-check"></i>&nbsp;
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ entity.author }}</td>
                    <td>
                        <div class="switch">
                            <input type="checkbox" class="status" {% if entity.published %}checked="checked"{% endif %} data-id="{{ entity.id }}" data-repo="ContentBundle:Content" data-prop="published">
                        </div>
                    </td>
                    <td>{% if entity.modified %}{{ entity.modified|date(date_format) }}{% endif %}</td>
                    <td class="text-right">
                        <a href="{{ path('admin_content_edit', { 'id': entity.id }) }}" class="btn btn-simple btn-info btn-xs" data-toggle="tooltip" data-placement="top" data-original-title="Editer">
                            <i class="fa fa-pencil"></i>
                        </a>
                        <a data-toggle="modal" role="button" href='#modal-delete' class="btn btn-simple btn-danger btn-xs" rel="tooltip" data-placement="top" data-original-title="Supprimer" data-id="{{ entity.id }}">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>

    <div class="modal fade" id="modal-delete" aria-labelledby="simpleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">{{ 'cms.content.modal.title_delete'|trans }}</h4>
                </div>
                <div class="modal-body">
                    {{ 'cms.content.modal.text_delete'|trans }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn ink-reaction btn-raised btn-default-bright" data-dismiss="modal"><i class="fa fa-close"></i> {{ 'cancel'|trans }}</button>
                    <a href="" class="btn ink-reaction btn-raised btn-danger"><i class="fa fa-trash-o"></i> {{ 'delete'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
<script type="text/javascript">
$('#modal-delete').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      var id = button.data('id');
      var path = Routing.generate('{{ url }}', {id: id});
      var modal = $(this);
      modal.find('.modal-footer > a.btn-danger').attr('href', path);
})
</script>
{% endblock javascript %}
