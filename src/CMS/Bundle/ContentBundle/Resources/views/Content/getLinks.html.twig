<div class="form-group">
    <label for="content-link" class="control-label">Contenu</label>
    <select name="content-link" id="content-link" class="form-control">
        <option value=""></option>
        {% set old_language = contents.0.language.id %}
        {% for content in contents %}
        {% if old_language != content.language.id %}
        </optgroup><optgroup label="{{ content.language.name }}">
            {% set old_language = content.language.id %}
            {% endif %}
            {% if loop.index == 1 %}
            <optgroup label="{{ content.language.name }}">
                {% endif %}
                <option value="{{ path('front_single', {'alias': content.url}) }}">{{ content.title }}</option>
                {% endfor %}
            </optgroup>
    </select>
</div>
