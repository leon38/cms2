{% extends "::Templates/Admin/base_login.html.twig" %}

{% block body %}
	<h1>{{ "cms.install.message.title"|trans }}</h1>
	<p>{{ "cms.install.message.message"|trans }}</p>
	<div class="form-horizontal">
		<div class="form-group">
			<div class="col-sm-2">
				<label>{{ "cms.user.user_login"|trans }}</label>
			</div>
			<div class="col-sm-10">
				{{ user.userLogin }}
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-2">
				<label>{{ "cms.user.user_pass"|trans }}</label>
			</div>
			<div class="col-sm-10">
				<i>{{ "cms.install.message.user_pass"|trans }}</i>
			</div>
		</div>
		<div class="clearfix"></div>
		<a href="{{ path('admin_login') }}" class="button button-large">{{ "cms.install.message.connect"|trans }}</a>
	</div>
{% endblock body %}