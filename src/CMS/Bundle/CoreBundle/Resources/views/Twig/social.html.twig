{% if url is defined %}
    <div class="social">
        {{ 'cms.core.share'|trans }} :
        <a href="https://facebook.com/sharer/sharer.php?u={{ url }}" target="_blank" rel="noopener"><i
                    class="fa fa-facebook"></i></a>
        <a href=https://twitter.com/intent/tweet/?url={{ url }}" target="_blank" rel="noopener"><i
                    class="fa fa-twitter"></i></a>
        <a href="https://plus.google.com/share?url={{ url }}" target="_blank" rel="noopener"><i
                    class="fa fa-google-plus-official"></i></a>
        <a href="https://pinteret.com/pin/create/button/?url={{ url }}" target="_blank" rel="noopener"><i
                    class="fa fa-pinterest"></i></a>
    </div>
{% endif %}