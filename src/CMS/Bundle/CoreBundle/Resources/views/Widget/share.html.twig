{# "Twitter", "Facebook", "Pinterest", "Google Plus" #}
<a href="https://twitter.com/share?url={{ bitlyUrl }}&text={{ content.get('twitter description').value|url_encode }}&via={{ content.get('twitter creator').value|url_encode }}" target="_blank" rel="noopener">
    <i class="fa fa-twitter"></i>
</a>
<a href="https://www.facebook.com/sharer/sharer.php?u={{ bitlyUrl }}" target="_blank" rel="noopener">
    <i class="fa fa-facebook"></i>
</a>
<a href="https://pinterest.com/pin/create/button/?{% if content.thumbnail != null %}url={{ content.thumbnail.getWebPath()|imagine_filter('thumb_post')|url_encode }}&{% endif %}{% if content.thumbnail != null %}media={{ content.thumbnail.metas['alt_1']|url_encode }}&{% endif %}description={{ content.chapo|url_encode }}" target="_blank" rel="noopener">
    <i class="fa fa-pinterest"></i>
</a>